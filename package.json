{
  "name": "sprite-ts",
  "version": "1.0.1",
  "description": "A TypeScript library for creating animated sprites from spritesheets",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "sprite",
    "lightweight",
    "animation",
    "spritesheet",
    "typescript"
  ],
  "author": "Hannes Rasmussen",
  "license": "ISC",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "3.1.4",
    "@vitest/ui": "^3.1.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hannesrasmussen/sprite-ts.git"
  },
  "homepage": "https://github.com/Hannesrasmussen/sprite-ts#readme",
  "bugs": {
    "url": "https://github.com/Hannesrasmussen/sprite-ts/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
